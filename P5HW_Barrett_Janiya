#adding random numbers

def add_num(num1,num2):
    print(num1)
    print(f'+{num2}')
    add_sum = num1 + num2
    answer = input("Enter answer. ")
    while answer != add_sum:
        if answer > add_sum:
            print("Sorry, guess is too high")
            print()
            answer = input("Enter answer. ")
        if answer < add_sum:
            print("Sorry, guess is too low")
            print()
            answer = input("Enter answer. ")

#subtracting random numbers
def subtract_num(num1,num2):
    print(num1)
    print(f'-{num2}')
    subtract_sum = num1 - num2
    answer = input("Enter answer. ")
    if answer > add_sum:
        print("Sorry, guess is too high")
        print()
